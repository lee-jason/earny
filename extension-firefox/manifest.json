{
  "manifest_version": 2,
  "name": "Earny - Fitness Credit Tracker",
  "version": "1.0.0",
  "description": "Track your fitness credits and spend them watching YouTube and Twitch",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "cookies",
    "https://www.youtube.com/*",
    "https://www.twitch.tv/*",
    "http://localhost:3000/*",
    "https://earny-red.vercel.app/*"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["config.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://www.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "earny@example.com",
      "strict_min_version": "109.0"
    }
  }
}
